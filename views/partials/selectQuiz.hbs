                        <form id='selectQuiz' action="/quiz" method="get">
                            
                            <div class="form-group">
                                <label for="sel1">Select a Quiz:</label>
                                <select class="form-control" id="sel1">
                                {{#each quizzes}}
                                    <option value="{{_id}}">{{name}}</option>
                                {{/each}}
                                </select>
                                <small id="helpId2" class="form-text text-muted">Select a Quiz</small>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>