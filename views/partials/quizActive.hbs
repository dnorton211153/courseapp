    <div class="limit-mt jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">{{quizName}}</h1>


                <div class="form-group row">

                    <div class="col-7">
                        <label style="width: 100%" for="question">Question #{{currentQuestionNumber}}:</label>
                        <textarea class="form-control" name="question" id="question" rows="4" placeholder="Enter question...">{{currentQuestion.question}}</textarea>
                        <label for="question">Select your answer(s):</label>
                        {{#each currentQuestion.choices}}
                        <div class="row">
                            <div class="col-1 checkboxContainer" >
                                <input name="checkbox{{@index}}" type="checkbox">
                            </div>
                            <div class="col-11">
                                <input name="text{{@index}}" type="text" class="form-control" aria-describedby="helpId" placeholder="Enter text..." value="{{text}}">
                            </div>
                        </div>
                        {{/each}}

                    </div>
                    {{#if currentQuestion.imageLocation}}
                    <div class="col-5">
                        <div class="mt-3"><img id="currentImage" width="100%" src="/public/uploads/{{currentQuestion.imageLocation}}" alt="Question Image"></div>
                    </div>
                    {{/if}}
                    <input class="d-none" type="text" name="questionId" id="questionId" value="{{currentQuestion._id}}">
                </div>

        </div>
    </div>
