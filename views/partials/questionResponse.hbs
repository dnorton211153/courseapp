            <div id="responseCheckboxes" class="{{{hideIfNotEqual currentQuestion.type "multi" "single"}}}">
                <label for="question">Choices:</label>
                {{#each currentQuestion.choices}}
                <div class="row">
                    <div class="col-1 checkboxContainer" >
                        <input class="checkbox" name="checkbox{{@index}}" type="checkbox" {{{booleanCheckboxHelper correct}}}>
                    </div>
                    <div class="col-11">
                        <textarea name="text{{@index}}" rows="{{{calculateRowsShort text}}}" type="text" class="form-control" aria-describedby="helpId" placeholder="Enter text...">{{text}}</textarea>
                    </div>
                </div>
                {{/each}}
            </div>
            <div id="responseText" class="{{{hideIfNotEqual currentQuestion.type "text"}}}">
                  <label for="text">Response:</label>
                  <input type="text" class="form-control" name="answerTextRegex" id="answerTextRegex" aria-describedby="helpId" placeholder="Enter regex for response" value="{{currentQuestion.answerTextRegex}}">
                  <small id="helpId" class="form-text text-muted">Enter regular expression to grade answer.</small>
            </div>
            <div id="responseEssay" class="{{{hideIfNotEqual currentQuestion.type "essay"}}}">
                  <label for="essay">Essay:</label>
                  <textarea class="form-control" name="answerEssayRegex" id="answerEssayRegex" rows="3" placeholder="Enter regex for response">{{currentQuestion.answerEssayRegex}}</textarea>
            </div>
