<!DOCTYPE html>
<html lang="en">
<head>

    <title>{{username}} Profile</title>

    {{> headerStuff jQuery=true fontAwesome=true bootStrap=true }}

</head>
<body>

    <div class="outerContainer">

        {{> navbar profileActive='active' }}

            <div class="pt-1 jumbotron jumbotron-fluid">
                <div class="container">


                    <div class="row">
                        <div class="col-12">
                            <span class="text-primary" id="feedback">{{feedback}} </span>
                        </div>
                    </div>

                    <main id="profileMain">

                    <div class="row">
                        <div class="col-10"><h1 class="display-4">Hello {{firstname}}!</h1></div>
                        <div class="col-2"><a href="/publicProfile/{{username}}">Public Profile</a></div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-12">
                            <h4>Change account details:</h4>
                            <form id="userUpdateForm" action="/updateAccount" method="post">
                                {{> userUpdateForm }}
                            </form>
                        </div>

                        {{#if teacher}}
                        {{>myCourses}}
                        {{/if}}

                        {{>myProjects}}
                        
                        {{>myActivity}}
                        

                    </div>
                    <div id="quizGraph" class="text-center my-3">
                        <div class="d-none">
                            <canvas id="quizGraphCanvas" width="400" height="200"></canvas>
                        </div>
                        <div>
                            <svg id="quizGraphSVG" width="400" height="200"></svg>
                        </div>

                        <hr class="my-2">
                        <p>Copyright <i class="fas fa-copyright"></i> Norton 2021</p>

                    </div>
                </main>
            </div>

            <div class="d-none" id="scoreArrays">{{scoreArrays}}</div>
            <div class="d-none" id="admin">{{admin}}</div>

    </div>
    <script src="/viewScripts/profileScripts.js"></script>
    <script src="/cdn/js/d3/4.3.0/d3.min.js"></script>
    <script src="/viewScripts/profileScripts_d3.js"></script>
</body>
</html>