<!DOCTYPE html>
<html lang="en">
<head>

    <title>nortonQuiz Admin Interface</title>
    {{> headerStuff jQuery=true fontAwesome=true bootStrap=true }}

</head>
<body>

    <div class="outerContainer">

        {{> navbar }}

        <div class="jumbotron jumbotron-fluid limit-mt">
            <div id="adminInterface" class="container">
                <div id='quizId' class='d-none'>{{quiz._id}}</div>
                <div class="row">
                    <div class="col-9"><h2 class="display-4">{{quiz.name}}</h2></div>
                    <div class="col-3 mt-4"><button id="deleteQuiz" type="button" class="btn btn-danger"><i class="fas fa-minus-circle"></i> Delete Quiz</button></div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <form class="d-none" id="questionDetail" method="post" action="/quizAdmin/{{quiz._id}}">
                            {{> questionDetail }}
                        </form>
                        <div class="row">
                            <div class="col-4"><button id="btnNewQuestion" type="button" class="btn btn-block btn-default"><i class="fa fa-plus" aria-hidden="true"></i> Add</button></div>
                            <div class="col-4 pr-1"><button id="btnSaveQuestion" type="submit" class="d-none btn btn-primary btn-block "><i class="fa fa-check" aria-hidden="true"></i> Save</button></div>
                            <div class="col-4 pl-1"><button id="btnCancel" type="button" class="d-none btn btn-danger btn-block "><i class="fas fa-backspace"></i> Cancel</button></div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="questionListContainer">
                            {{> questionList}}
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <span class="text-primary" id="feedback">{{feedback}}</span>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="/viewScripts/quizAdminScripts.js"></script>

</body>
</html>