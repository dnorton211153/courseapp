<!DOCTYPE html>
<html lang="en">
<head>

    <title>nortonQuiz Quiz Interface</title>

    {{> headerStuff jQuery=true fontAwesome=true bootStrap=true react=true }}

</head>
<body>

    <div class="outerContainer">
        {{> navbar quizActive='active' }}
        <div class="limit-mt jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Quiz Selection</h1>
                <div class="col-3">
                    <form id='selectQuiz'>
                        {{> selectQuiz}}
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script type="text/babel">
        document.getElementById('selectQuiz').addEventListener('submit', (e) => {
            if (confirm("Are you ready to start the quiz?")) {
                localStorage.removeItem('userAnswers');
                window.location.href = '/quizActive/' + e.target.elements.quizSelect.value;

            }
            e.preventDefault();
        })
    </script>
</body>
</html>