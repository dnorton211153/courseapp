<!DOCTYPE html>
<html lang="en">
<head>

    <title>CourseApp Quiz Interface</title>

    {{> headerStuff jQuery=true fontAwesome=true bootStrap=true react=true redux=true marked=true }}

</head>
<body>

    <div class="outerContainer">
        {{> navbar quizActive='active' }}

        <div class="pt-1 jumbotron jumbotron-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-10 mt-2"><h5>{{quizName}}</h5></div>
                    <div class="col-2 mt-2" id="quizTimer"></div>
                    <div class="col-12"><p>{{description}}</p></div>
                    <input type="hidden" id="quizId" value="{{quizId}}">
                    <input type="hidden" id="courseId" value="{{courseId}}">
                    <input type="hidden" id="totalQuestions" value={{totalQuestions}}>
                    <input type="hidden" id="timeLimit" value={{timeLimit}}>
                    <input type="hidden" id="maxAttempts" value={{maxAttempts}}>
                    <input type="hidden" id="userId" value="{{userId}}">
                    <input type="hidden" id="reviewMode" value={{reviewMode}}>
                </div>
                <main id="quizInterface">
                    
                    <div class="row">
                        <div class="col-10">
                            <span class="text-primary" id="feedback"></span>
                        </div>
                        
                    </div>
                    <div class="row">
                    <div class="col-5"></div>
                    <div class="col-7">
                        <div id="quizControls" class="row">
                            <div class="col-4 pr-0">
                                <button id="previousQuestion" class="form-control btn btn-std d-none">Back <span class="badge badge-primary"><i class="fas fa-minus"></i></span></button>
                            </div>
                            <div class="col-4 pr-0">
                                <button id="nextQuestion" class="form-control btn btn-std d-none">Next <span class="badge badge-primary"><i class="fas fa-plus"></i></span></button>
                            </div>
                            <div class="col-4 pl-0">
                                <button id="finishQuiz" class="form-control btn btn-std btn-primary d-none">Done! <span class="badge badge-primary"><i class="fas fa-check"></i></span></button>
                            </div>
                        </div>
                    </div></div>
                    <div id="quizQuestion"></div>
                </main>
            </div>
        </div>
    </div>

    <script src="/viewScripts/quizActiveScripts.js"></script>
    <script type="text/babel" src="/viewScripts/quizTimerRedux.js"></script>

</body>
</html>