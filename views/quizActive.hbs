<!DOCTYPE html>
<html lang="en">
<head>

    <title>CourseApp Quiz Interface</title>

    {{> headerStuff jQuery=true fontAwesome=true bootStrap=true react=true redux=true marked=true mathjax=true }}

</head>
<body>

    <div class="outerContainer">
        {{> navbar quizActive='active' }}
        
        <div class="pt-1 jumbotron jumbotron-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-10 mt-2 pr-0"><h5>{{quizName}}</h5></div>
                    <div class="col-2 mt-2 pl-0" id="quizTimer"></div>
                    <div class="col-12"><p>{{description}}</p></div>
                    <input type="hidden" id="quizId" value="{{quizId}}">
                    <input type="hidden" id="courseId" value="{{courseId}}">
                    <input type="hidden" id="totalQuestions" value={{totalQuestions}}>
                    <input type="hidden" id="timeLimit" value={{timeLimit}}>
                    <input type="hidden" id="maxAttempts" value={{maxAttempts}}>
                    <input type="hidden" id="userId" value="{{userId}}">
                    <input type="hidden" id="reviewMode" value={{reviewMode}}>
                </div>
                <main id="quizInterface">
                    
                    <div class="row">
                        <div class="col-10">
                            <span class="text-primary" id="feedback"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-9">
                            <div id="quizControls" class="row d-flex align-items-center">
                                
                                <div class="col-3 pr-0">
                                    <button class="btn p-0" id="speak">
                                        <span class="badge badge-info"><i class="fab fa-readme"></i></span>
                                    </button>
                                    <button class="btn p-0" data-toggle="modal" data-target="#modelId">
                                        <span class="badge badge-info"><i class="fas fa-adjust    "></i></span>
                                    </button>
                                </div>
                                <div class="col-3 px-1">
                                    <button id="previousQuestion" class="form-control btn btn-std d-none">Back <span class="badge badge-success"><i class="fas fa-minus"></i></span></button>
                                </div>
                                <div class="col-3 px-1">
                                    <button id="nextQuestion" class="form-control btn btn-std d-none">Next <span class="badge badge-success"><i class="fas fa-plus"></i></span></button>
                                </div>
                                <div class="col-3 px-1">
                                    <button id="finishQuiz" class="form-control btn btn-std btn-success d-none">Done! <span class="badge badge-success"><i class="fas fa-check"></i></span></button>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">

                        </div>
                    </div>
                    <div id="quizQuestion"></div>
                </main>
            </div>
        </div>
    </div>



    <!-- Configure-Speech Modal -->
    <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Configure Speech</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
                <div class="modal-body">
                    <select name="voice" id="voices" style="width: 100%">
                            <option value="">Select a voice</option>
                    </select>
                    <div class="row py-2">
                        <div class="col-6">
                            <label for="rate">Rate:</label>
                            <input type="range" name="rate" min="0" max="3" value="1" step="0.1">
                        </div>
                        <div class="col-6">
                            <label for="pitch">Pitch:</label>
                            <input type="range" name="pitch" min="0" max="2" step="1">
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



    <script src="/viewScripts/quizActiveScripts.js"></script>
    <script type="text/babel" src="/viewScripts/quizTimerRedux.js"></script>

</body>
</html>